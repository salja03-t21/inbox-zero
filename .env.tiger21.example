# TIGER 21 Production Environment Configuration
# Domain: iz.tiger21.com
# Server: 167.99.116.99

# ============================================
# IMPORTANT: This is a TEMPLATE file only
# ============================================
# 1. Copy this file to .env.tiger21 ON THE SERVER ONLY
# 2. Fill in actual credentials (NEVER commit the real .env.tiger21 to git)
# 3. .env.tiger21 is in .gitignore and will not be committed

# ============================================
# APPLICATION
# ============================================
NODE_ENV=production
NEXT_PUBLIC_BASE_URL=https://iz.tiger21.com

# ============================================
# DATABASE (PostgreSQL)
# ============================================
POSTGRES_USER=inboxzero
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
POSTGRES_DB=inboxzero

DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}?schema=public
DIRECT_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}?schema=public

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://redis:6379
UPSTASH_REDIS_URL=http://serverless-redis-http:80
UPSTASH_REDIS_TOKEN=CHANGE_THIS_SECURE_REDIS_TOKEN

# ============================================
# AUTHENTICATION
# ============================================
# Generate with: openssl rand -base64 32
AUTH_SECRET=CHANGE_THIS_MINIMUM_32_CHARACTERS_SECRET

# Better Auth Configuration
BETTER_AUTH_SECRET=CHANGE_THIS_MINIMUM_32_CHARACTERS_SECRET
BETTER_AUTH_URL=https://iz.tiger21.com

# ============================================
# GOOGLE OAUTH (Gmail Integration)
# ============================================
# Get from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Google PubSub (for real-time email notifications)
GOOGLE_PUBSUB_TOPIC_NAME=your_pubsub_topic_name
GOOGLE_PUBSUB_VERIFICATION_TOKEN=your_pubsub_verification_token

# ============================================
# MICROSOFT OAUTH (Outlook Integration)
# ============================================
# Get from: https://portal.azure.com/
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_TENANT_ID=common

# ============================================
# ENCRYPTION KEYS
# ============================================
# Generate with: openssl rand -hex 16 (for salt) and openssl rand -hex 32 (for secret)
EMAIL_ENCRYPT_SECRET=CHANGE_THIS_64_CHARACTER_HEX_STRING
EMAIL_ENCRYPT_SALT=CHANGE_THIS_32_CHARACTER_HEX_STRING

# ============================================
# API KEYS
# ============================================
# Generate with: openssl rand -base64 32
INTERNAL_API_KEY=CHANGE_THIS_INTERNAL_API_KEY
API_KEY_SALT=CHANGE_THIS_API_KEY_SALT

# ============================================
# INNGEST (Background Jobs)
# ============================================
# Generate with: openssl rand -base64 32
INNGEST_EVENT_KEY=CHANGE_THIS_INNGEST_EVENT_KEY
INNGEST_SIGNING_KEY=CHANGE_THIS_INNGEST_SIGNING_KEY
INNGEST_BASE_URL=http://inngest:8288
INNGEST_DEV=1

# ============================================
# QSTASH (Optional - if using Upstash QStash)
# ============================================
QSTASH_TOKEN=your_qstash_token_if_needed
QSTASH_CURRENT_SIGNING_KEY=your_qstash_current_signing_key
QSTASH_NEXT_SIGNING_KEY=your_qstash_next_signing_key

# ============================================
# AI PROVIDERS (Configure at least one)
# ============================================

# OpenAI
OPENAI_API_KEY=sk-your_openai_api_key

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key

# Google AI
GOOGLE_GENERATIVE_AI_API_KEY=your_google_ai_api_key

# ============================================
# EMAIL SENDING (Resend)
# ============================================
RESEND_API_KEY=re_your_resend_api_key

# ============================================
# LOOPS (Marketing Emails - Optional)
# ============================================
LOOPS_API_KEY=your_loops_api_key

# ============================================
# TINYBIRD (Analytics - Optional)
# ============================================
TINYBIRD_TOKEN=your_tinybird_token

# ============================================
# POSTHOG (Product Analytics - Optional)
# ============================================
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ============================================
# SENTRY (Error Tracking - Optional)
# ============================================
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# ============================================
# CRON SECRET (for scheduled jobs)
# ============================================
CRON_SECRET=CHANGE_THIS_CRON_SECRET

# ============================================
# STRIPE (Billing - Optional)
# ============================================
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/disable features as needed
NEXT_PUBLIC_DISABLE_GMAIL=false
NEXT_PUBLIC_DISABLE_OUTLOOK=false
