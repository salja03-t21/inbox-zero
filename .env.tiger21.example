# ============================================
# APPLICATION
# ============================================
NODE_ENV=production
NEXT_PUBLIC_BASE_URL=https://iz.tiger21.com

# ============================================
# DATABASE (DigitalOcean Managed PostgreSQL)
# ============================================
# TIGER 21 uses DigitalOcean Managed Database, not Docker container
# Connection details from DigitalOcean control panel
DATABASE_URL=postgresql://inbox_zero_user:YOUR_PASSWORD_HERE@db-postgres-do-user-13034382-0.b.db.ondigitalocean.com:25060/inbox-zero?sslmode=require
DIRECT_URL=postgresql://inbox_zero_user:YOUR_PASSWORD_HERE@db-postgres-do-user-13034382-0.b.db.ondigitalocean.com:25060/inbox-zero?sslmode=require

# ============================================
# REDIS (Docker container)
# ============================================
REDIS_URL=redis://redis:6379
UPSTASH_REDIS_URL=http://serverless-redis-http:80
UPSTASH_REDIS_TOKEN=CHANGE_THIS_SECURE_REDIS_TOKEN

# ============================================
# AUTHENTICATION
# ============================================
# Generate with: openssl rand -base64 32
AUTH_SECRET=CHANGE_THIS_MINIMUM_32_CHARACTERS_SECRET
BETTER_AUTH_SECRET=CHANGE_THIS_MINIMUM_32_CHARACTERS_SECRET
BETTER_AUTH_URL=https://iz.tiger21.com

# ============================================
# GOOGLE OAUTH (Gmail Integration) - DISABLED
# ============================================
# TIGER 21 uses Microsoft/Outlook only - Gmail is disabled
GOOGLE_CLIENT_ID=disabled
GOOGLE_CLIENT_SECRET=disabled
GOOGLE_PUBSUB_TOPIC_NAME=disabled
GOOGLE_PUBSUB_VERIFICATION_TOKEN=disabled

# ============================================
# MICROSOFT OAUTH (Outlook Integration) - REQUIRED
# ============================================
# Get from: https://portal.azure.com/ -> App registrations
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_TENANT_ID=your_microsoft_tenant_id

# ============================================
# ENCRYPTION KEYS
# ============================================
# Generate with: openssl rand -hex 32 (for secret) and openssl rand -hex 16 (for salt)
EMAIL_ENCRYPT_SECRET=CHANGE_THIS_64_CHARACTER_HEX_STRING
EMAIL_ENCRYPT_SALT=CHANGE_THIS_32_CHARACTER_HEX_STRING

# ============================================
# API KEYS
# ============================================
# Generate with: openssl rand -base64 32
INTERNAL_API_KEY=CHANGE_THIS_INTERNAL_API_KEY
API_KEY_SALT=CHANGE_THIS_API_KEY_SALT

# ============================================
# INNGEST (Background Jobs)
