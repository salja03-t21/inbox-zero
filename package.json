{
  "name": "inbox-zero",
  "private": true,
  "scripts": {
    "build": "turbo build --filter=./apps/web",
    "dev": "turbo dev --filter=./apps/web",
    "test": "turbo run test --filter=./apps/web",
    "lint": "turbo lint",
    "prepare": "husky install",
    "ncu": "ncu -u -ws",
    "format-and-lint": "biome check .",
    "format-and-lint:fix": "biome check . --write"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@turbo/gen": "2.6.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.5",
    "prettier": "3.6.2",
    "tsconfig-paths": "^4.2.0",
    "turbo": "2.5.8",
    "ultracite": "6.3.2"
  },
  "packageManager": "pnpm@10.19.0",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "npx ultracite fix"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.0.10",
      "@types/react-dom": "19.0.4",
      "tar-fs": "2.1.4",
      "prismjs": "1.30.0",
      "vite": "7.1.11",
      "fast-redact": "3.5.0",
      "tmp": "0.2.4",
      "min-document": "2.19.1"
    }
  }
}
